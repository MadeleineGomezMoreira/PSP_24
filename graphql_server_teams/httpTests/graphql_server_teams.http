# graphql-server-teams

###
@urlbase = http://localhost:8082/
# @name getTeamsWithName
GRAPHQL {{urlbase}}graphql

query GetTeams{
    getTeams{
        name
    }
}

###
# @name getTeamsWithPlayers
GRAPHQL {{urlbase}}graphql

query GetEquipos{
    getTeams{
        id
        name
        players{
            id
            name
        }
    }
}

###
# @name getTeamExists
GRAPHQL {{urlbase}}graphql

query GetEquipo($id : Int!){
    getTeam(id : $id){
        name
        players{
            id
            name
        }
    }
}

